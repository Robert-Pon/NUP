<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Books" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c1</item>
        <item name="colorPrimaryVariant">@color/c1</item>
        <item name="colorOnPrimary">@color/c2</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="BottomSheetDialog"
        parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@drawable/buy_card</item>
    </style>
    <color name="text" tools:ignore="MissingDefaultResource">#FFF</color>
    <color name="textOposite" tools:ignore="MissingDefaultResource">#d8f3dc</color>

    <style name="chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/c3</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="chipMinHeight">45dp</item>
    </style>
</resources>